                            android:layout_marginHorizontal="30dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="@color/light_purple">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
